# Advance RAG Vector Store Environment Configuration

# =============================================================================
# VECTOR STORE SELECTION
# =============================================================================
# Choose your vector store: pgvector, pinecone, weaviate
VECTOR_STORE_TYPE=pgvector

# =============================================================================
# PINECONE CONFIGURATION (for VECTOR_STORE_TYPE=pinecone)
# =============================================================================
# Get API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=advance-rag
PINECONE_NAMESPACE=chunks
PINECONE_BATCH_SIZE=100
PINECONE_SERVERLESS=true
PINECONE_CLOUD=aws
PINECONE_REGION=us-west-2

# =============================================================================
# WEAVIATE CONFIGURATION (for VECTOR_STORE_TYPE=weaviate)
# =============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key-here  # Optional for local development
WEAVIATE_CLASS_NAME=Chunk
WEAVIATE_BATCH_SIZE=100

# =============================================================================
# POSTGRESQL + PGVECTOR CONFIGURATION (for VECTOR_STORE_TYPE=pgvector)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/advance_rag
VECTOR_INDEX_TYPE=hnsw
VECTOR_HNSW_M=16
VECTOR_HNSW_EF_CONSTRUCTION=64
VECTOR_HNSW_EF_SEARCH=40
VECTOR_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# COMMON VECTOR CONFIGURATION
# =============================================================================
EMBEDDING_DIMENSION=384
VECTOR_BATCH_SIZE=100
VECTOR_SIMILARITY_THRESHOLD=0.7
