# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/advance_rag
REDIS_URL=redis://localhost:6379
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
ELASTICSEARCH_URL=http://localhost:9200

# API Keys (replace with actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_TTL=3600

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-opus-20240229
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=60

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=1000
RATE_LIMIT_PER_MINUTE=60
REQUEST_TIMEOUT=30

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Vector Store Configuration
VECTOR_INDEX_TYPE=hnsw
VECTOR_HNSW_M=16
VECTOR_HNSW_EF_CONSTRUCTION=64
VECTOR_HNSW_EF_SEARCH=40
VECTOR_SIMILARITY_THRESHOLD=0.7

# Retrieval Configuration
RETRIEVAL_TOP_K=10
RETRIEVAL_DENSE_WEIGHT=0.7
RETRIEVAL_SPARSE_WEIGHT=0.3
RETRIEVAL_RERANK_TOP_K=5
RETRIEVAL_MAX_CONTEXT_LENGTH=4000

# GraphRAG Configuration
GRAPH_COMMUNITY_ALGORITHM=leiden
GRAPH_COMMUNITY_RESOLUTION=1.0
GRAPH_MAX_HOPS=3
GRAPH_ENTITY_TYPES=["subject", "treatment", "lab_test", "adverse_event", "medication"]

# Data Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=["json", "md", "txt", "csv"]

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Performance
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=10

# PHI/PHI Protection
PHI_REDACTION_ENABLED=true
PHI_REDACTION_ENTITIES=["PERSON", "LOCATION", "ORGANIZATION", "DATE"]
COMPLIANCE_AUDIT_ENABLED=true

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false
ENABLE_PROFILER=false
